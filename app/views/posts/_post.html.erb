<div class="posts-wrapper row">
  <%= post.user.user_name%>
  <div class="image center-block">
    <%= link_to (image_tag post.image.url(:medium), class:'img-responsive'), post_path(post) %>
    <div class="post-botton">
      <div class="caption">
        <div class="user-name">
          <%= post.user.user_name%>
          <%= post.caption %>
        </div>
        <% if post.comments %>
          <% post.comments.each do |comment| %>
            <div class="comment">
              <div class="user-name">
                <%= comment.user.user_name%>
              </div>
              <br>
              <div class="comment-content">
                <%= comment.context %>
              </div>
              <% if comment.user == current_user %>
                <div class="text-center edit-links">
                 <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: "Are you sure?" } do %>
                    <span class="glyphicon glyphicon-remove delete-comment-icon"></span>
                 <% end %>

                </div>
              <% end %>
            </div>
          <%end%> 
        <%end%>
          <div class="comment-like-form">
            <div class="like-button col-sm-1">
                <span class="glyphicon glyphicon-heart-empty"></span>
            </div>
            <div class="comment-form">
                <div class="col-sm-11 ">
                    <%= form_for [post, post.comments.new] do |f| %>
                    <%= f.text_field :context , placeholder: 'Add a comment...', class: "col-lg-12"%>
                <%end%>
                </div>
            </div>

            <br>
        </div>
      </div>
    </div>    

  </div>
  </div>
</div>

