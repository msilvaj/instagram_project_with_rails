<div class="container">
  <%= simple_form_for @post do |f| %>
        <div class="form-group">
            <%= f.input :image %>
        
        <div class="form-group text-center">
            <%= f.text_field :caption, placeholder: "Add a Caption"%>
        </div>
        <div class="form-group text-center">
            <%= f.button :submit, class: 'btn-success' %>
        </div>
        </div>
    <%end%> 
</div>
